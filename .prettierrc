{
    "auto_format_on_save": true,
    "useTabs": false,
    "tabWidth": 4,
    "semi":     true,
    "singleQuote": true,
    "printWidth": 80,
    "trailingComma": "es5",
    "htmlWhitespaceSensitivity": "ignore",
    "overrides": [
        {
            "files": ["pages/*.vue", "pages/**/*.vue", "components/**/*.vue"],
            "options": {
                "printWidth": 170
            }
        }
    ]
}